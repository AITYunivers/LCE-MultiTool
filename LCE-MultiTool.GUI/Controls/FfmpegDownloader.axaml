<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
		Width="450"
		Height="150"
        x:Class="LCE_MultiTool.FfmpegDownloader"
		CanResize="False" 
		WindowStartupLocation="CenterScreen"
        TransparencyLevelHint="AcrylicBlur"
        Background="#C0040006"
        Title="LCE-MultiTool | Downloading ffmpeg"
		ExtendClientAreaChromeHints="NoChrome"
		ExtendClientAreaToDecorationsHint="True">
	<Grid>
		<TextBlock Text="Downloading ffmpeg" FontSize="24" TextAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="8,35,8,45"/>
		<TextBlock Text="Please wait" FontSize="16" TextAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="8,30,8,8"/>
		<ProgressBar x:Name="DownloadProgress" Width="430" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Background="#20000000" Margin="8" BorderBrush="{DynamicResource SemiColorBackground1}" BorderThickness="1"/>
	</Grid>
</Window>
